@model IEnumerable<MovieCustomerMVCAppWithAuthen.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Details</h2>
<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <th>Movie Id</th>
            <th>Movie Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>@m.Id</td>
            <td>@Html.ActionLink(m.Name,"Details","Movie",new { id = m.Id },null)</td>
        </tr>
        }
    </tbody>
</table>

